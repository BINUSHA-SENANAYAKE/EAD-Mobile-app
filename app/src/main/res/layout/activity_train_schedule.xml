<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doc_name21"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train_background"
    tools:context=".TrainSchedule">


    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="411dp"
        android:layout_height="275dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_trainwave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doc_page2_img"
            android:layout_width="369dp"
            android:layout_height="216dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="21dp"
            app:srcCompat="@drawable/train2" />


        <TextView
            android:id="@+id/tv_ourdoctors"
            android:layout_width="272dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="92dp"
            android:layout_weight=".5"
            android:shadowColor="#000000"
            android:shadowDx="4.0"
            android:shadowDy="4.0"
            android:text="Available Trains"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="364dp"
        android:layout_height="149dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/train_text_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout6"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/doc_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:text="From :-"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doc_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_toEndOf="@+id/doc_name1"
            android:padding="2dp"
            android:text="Kandy"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doc_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106dp"
            android:layout_marginEnd="-6dp"
            android:layout_toStartOf="@+id/doc_name4"
            android:layout_toEndOf="@+id/doc_name2"
            android:padding="2dp"
            android:text="To :-"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doc_name4"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp"
            android:padding="2dp"
            android:text="Colombo"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doc_name5"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name1"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/doc_name2"
            android:padding="2dp"
            android:text="Departure Time :-"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doc_name6"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name2"
            android:layout_marginStart="-16dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/doc_name5"
            android:padding="2dp"
            android:text="12 . 30 a.m"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/doc_name7"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Arrival  Time   :-"
            android:textColor="@color/green_700"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/doc_name8"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name6"
            android:layout_marginStart="-21dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/doc_name7"
            android:padding="2dp"
            android:text="06 . 30 p.m"
            android:textColor="@color/green_700"
            android:textSize="14sp" />

        <Button
            android:id="@+id/see_more_1"
            android:layout_width="158dp"
            android:layout_height="38dp"
            android:layout_below="@+id/doc_name1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="193dp"
            android:layout_marginTop="66dp"
            android:background="#00000000"
            android:text="Reserve Now"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>