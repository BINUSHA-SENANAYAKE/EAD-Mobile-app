<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout3"
    android:layout_width="390dp"
    android:layout_height="149dp"
    android:layout_margin="10dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/train_text_back"
>

    <TextView
        android:id="@+id/doc_name1"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/train_from"
        android:padding="2dp"
        android:text="From :-"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/train_from"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="26dp"
        android:layout_toStartOf="@+id/doc_name3"
        android:padding="2dp"
        android:text="Kandy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doc_name3"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/train_to"
        android:padding="2dp"
        android:text="To:-"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/train_to"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:padding="2dp"
        android:text="Colombo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/doc_name5"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_name1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:padding="2dp"
        android:text="Departure Time :-"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/train_from"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/doc_name5"
        android:padding="2dp"
        android:text="12 . 30 a.m"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/doc_name7"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_name5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-1dp"
        android:padding="2dp"
        android:text="Arrival  Time   :-"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/arrivalTime"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/departureTime"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/doc_name7"
        android:padding="2dp"
        android:text="06 . 30 p.m"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reserve_now"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:layout_below="@+id/doc_name1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="65dp"
        android:background="#00000000"
        android:text="Reserve Now"
        android:textColor="#8692f7"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="72dp"
        android:layout_below="@+id/train_to"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"
        android:layout_toEndOf="@+id/departureTime"
        app:srcCompat="@drawable/train" />


</RelativeLayout>